@using WebRole1.Models
@model DataTableStorage1Sample.Model.BookEntity
@{
    ViewBag.Title = "Tasks creator";
    List<TaskType> taskTypes = ViewBag.TaskTypes;    
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@using (@Html.BeginForm("Edit", "Storage", new { author = Model.PartitionKey, bookName = Model.RowKey }, FormMethod.Post))
{
    <label for="Count" class="col-md-3 control-label ui-sortable">Count in library:</label>
    @Html.TextBoxFor(model => model.Count, new { @class = "form-control", @required = true })

    <label for="Price" class="col-md-3 control-label ui-sortable">Price:</label>
    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @required = true })

    <button class="btn btn-success" data-send="once">Update book</button>
}